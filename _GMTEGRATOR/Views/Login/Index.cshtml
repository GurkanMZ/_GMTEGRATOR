@model _GMTEGRATOR.Models.GM_KULLANICILAR
@{
    ViewBag.Title = "Giriş";
    Layout = null;
}
<style>
    #LoginPage {
        width: 300px;
        height: 300px;
        position: absolute;
        left: 47%;
        top: 40%;
        margin-left: -50px;
        margin-top: -50px;
    }


    .gradient-custom {
        background: #6a11cb;
        background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));
        background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
    }
</style>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">


@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase">Giriş</h2>
                                <p class="text-white-50 mb-5">Lütfen email adresinizi ve şifrenizi giriniz.</p>

                                <div class="form-outline form-white mb-4">

                                    @Html.TextBoxFor(m=>m.KULLANICI_MAIL, new { @class = "form-control", required = true, type = "email" })
                                    <label class="form-label" for="typeEmailX">Email</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    @Html.TextBoxFor(m => m.KULLANICI_SIFRE, new { @class = "form-control", required = true, type = "password" })
                                    <label class="form-label" for="typePasswordX">Şifre</label>
                                </div>

                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Giriş</button>

                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

}