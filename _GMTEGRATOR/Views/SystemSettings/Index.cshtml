@model  _GMTEGRATOR.Models.SettingsModel

@{
    Layout = "~/Views/Shared/_Sistem.cshtml";
}

<h2 style="font-family:serif">Ürün Kaynak Ayarları:</h2>


@if (null != TempData["alertMessage"])
{
    <script type="text/javascript">
    alert('@Html.Raw(@TempData["alertMessage"])');
    </script>
}

<div class="container">
    <div class="row">
        <div class="col-md-5">

            <table class="table table-hover">


                @foreach (var item in Model.GM_USER_SYSTEM_SETTINGS)
                {

                    if (ViewBag.TABLO_VIEW_ISMI1 != null)
                    {
                        <tr>
                            <td>View/Tablo İsmi:</td>
                            <td>
                                @Html.DropDownListFor(x => x.USER_SYSTEM_SETTING.TABLO_VIEW_ISMI, new SelectList(ViewBag.TABLO_VIEW_ISMI1, "TABLO_VIEW_ISMI"))
                            </td>
                        </tr>
                        <tr>
                            <td>Stok Kodu:</td>
                            <td>
                                @Html.DropDownListFor(x => x.USER_SYSTEM_SETTING.STOK_KODU, new SelectList(ViewBag.STOK_KODU, "STOK_KODU"))
                            </td>
                        </tr>

                        <tr>
                            <td>Stok Adı:</td>
                            <td>
                                @Html.DropDownListFor(x => x.USER_SYSTEM_SETTING.STOK_ADI, new SelectList(ViewBag.STOK_ADI, "STOK_ADI"))
                            </td>
                        </tr>
                        <tr>
                            <td>Stok Açıklaması:</td>
                            <td>
                                @Html.DropDownListFor(x => x.USER_SYSTEM_SETTING.STOK_ACIKLAMASI, new SelectList(ViewBag.STOK_ACIKLAMASI, "STOK_ACIKLAMASI"))
                            </td>
                        </tr>
                        <tr>
                            <td>Stok Fiyatı:</td>
                            <td>
                                @Html.DropDownListFor(x => x.USER_SYSTEM_SETTING.STOK_FIYAT, new SelectList(ViewBag.STOK_FIYAT, "STOK_FIYAT"))
                            </td>
                        </tr>
                        <tr>
                            <td>Stok Adedi:</td>
                            <td>
                                @Html.DropDownListFor(x => x.USER_SYSTEM_SETTING.STOK_ADEDI, new SelectList(ViewBag.STOK_ADEDI, "STOK_ADEDI"))
                            </td>
                        </tr>
                        <tr>
                            <td>Stok Aktif/Pasif:</td>
                            <td>
                                @Html.DropDownListFor(x => x.USER_SYSTEM_SETTING.STOK_AKTIF_PASIF, new SelectList(ViewBag.STOK_AKTIF_PASIF, "STOK_AKTIF_PASIF"))
                            </td>
                        </tr>

                        <tr>
                            <td>Satıcı Stok Kodu:</td>
                            <td>
                                @Html.DropDownListFor(x => x.USER_SYSTEM_SETTING.SELLER_STOK_KODU, new SelectList(ViewBag.SELLER_STOK_KODU, "SELLER_STOK_KODU"))
                            </td>
                        </tr>
                    }
                }
            </table>

        </div>
        <div class="col-md-5">

            <table class="table table-hover">


                @foreach (var item in Model.GM_USER_SYSTEM_SETTINGS)
                {

                    if (ViewBag.TABLO_VIEW_ISMI1 != null)
                    {
                  
                        <tr>
                            <td>N11 KatalogID:</td>
                            <td>
                                @Html.DropDownListFor(x => x.USER_SYSTEM_SETTING.N11_KATALOG_ID, new SelectList(ViewBag.N11_KATALOG_ID, "N11_KATALOG_ID"))
                            </td>
                        </tr>
                        <tr>
                            <td>Hepsiburada SKU:</td>
