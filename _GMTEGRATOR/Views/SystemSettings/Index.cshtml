                            </td>
                        </tr>
                        <tr>
                            <td>Resim URL 2</td>
                            <td>
                                @Html.DropDownListFor(x => x.USER_SYSTEM_SETTING.RESIM_URL2, new SelectList(ViewBag.RESIM_URL2, "RESIM_URL2"))
                            </td>
                        </tr>
                        <tr>
                            <td>Resim URL 3</td>
                            <td>
                                @Html.DropDownListFor(x => x.USER_SYSTEM_SETTING.RESIM_URL3, new SelectList(ViewBag.RESIM_URL3, "RESIM_URL3"))
                            </td>
                        </tr>
                        <tr>
                            <td>Resim URL 4</td>
                            <td>
                                @Html.DropDownListFor(x => x.USER_SYSTEM_SETTING.RESIM_URL4, new SelectList(ViewBag.RESIM_URL4, "RESIM_URL4"))
