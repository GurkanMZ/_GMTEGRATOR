@model  _GMTEGRATOR.Models.SettingsModel

@{
    Layout = "~/Views/Shared/_Sistem.cshtml";

}

<h2 style="font-family:serif">Database Bağlantı Ayarları:</h2>
@*@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        <input type="submit" value="Kaydet" class="btn btn-outline-success" />
    }*@
@*@Html.AntiForgeryToken();*@
@if (null != TempData["alertMessage"])
{
    <script type="text/javascript">
    alert('@Html.Raw(@TempData["alertMessage"])');
    </script>
}
<div class="container">
    @using (Html.BeginForm("SystemConnection", "SystemSettings", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {@Html.AntiForgeryToken();
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-6">

            <table class="table table-hover">


                @foreach (var item in Model.GM_USER_SYSTEM_SETTINGS)
                {
                    <tr>
                        <td>Server:</td>
                        <td>
                            @Html.TextBoxFor(m => m.USER_SYSTEM_SETTING.SERVER_URL, new { @Value = item.SERVER_URL, @placeholder = "Server URL", @style = "width:350px" })
                        </td>
                    </tr>
                    <tr>
                        <td>Kullanıcı Adı:</td>
                        <td>
                            @Html.TextBoxFor(m => m.USER_SYSTEM_SETTING.USER_NAME, new { @Value = item.USER_NAME, @placeholder = "Kullanıcı Adı" })
                        </td>
                    </tr>
                    <tr>
                        <td>Şifre:</td>
                        <td>
                            @Html.TextBoxFor(m => m.USER_SYSTEM_SETTING.USER_PASSWORD, new { @Value = item.USER_PASSWORD, @placeholder = "Şifre" })
                        </td>
                    </tr>
                    <tr>
                        <td>DB İsmi:</td>
                        <td>
                            @Html.TextBoxFor(m => m.USER_SYSTEM_SETTING.DBNAME, new { @Value = item.DBNAME, @placeholder = "Database Adı" })
                        </td>
                    </tr>
                }

            </table>

        </div>

    </div>
    <div class="row">
        <div class="col-md-5"></div>
        <div class="col-md-3">
            <input type="submit" value="Kaydet" class="btn btn-outline-success" />
        </div>
    </div>
}
</div>


